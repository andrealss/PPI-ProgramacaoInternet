@model IEnumerable<EstudoProva.Models.Curso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.duracao_semestres)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duracao_semestres)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.identificador">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.identificador">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.identificador">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
